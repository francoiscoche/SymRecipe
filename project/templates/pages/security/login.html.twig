{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-4">Formulaire de connection</h1>

    {% if error %}
        <div class="alert alert-danger mt-4">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}
    

    <form action="{{ path('security.login') }}" method='post'>
        <div class="form-group">
        <label for="username" class="form-label mt-4">Email address</label>
        <input value="{{ last_username }}" type="email" name="_username" class="form-control" id="username" aria-describedby="emailHelp" placeholder="exemple@symrecipe.com">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
        <label for="password" class="form-label mt-4">Password</label>
        <input name="_password" type="password" class="form-control" id="password" placeholder="Password">
        </div>
    <button class="btn btn-primary mt-4" type="submit">Se connecter</button>
    </form>
</div>
{% endblock %}
